# This repository is safe to use with RHEL/CentOS base repository
# it only provides additional packages for the PHP stack
# all dependencies are in base repository or in EPEL

[remi-safe]
name=Safe Remi's RPM repository for Enterprise Linux {{ ansible_lsb.major_release }} - $basearch
#baseurl=http://rpms.remirepo.net/enterprise/{{ ansible_lsb.major_release }}/safe/$basearch/
mirrorlist=http://rpms.remirepo.net/enterprise/{{ ansible_lsb.major_release }}/safe/mirror
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-remi
