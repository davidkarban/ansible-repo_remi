# This repository only provides PHP 7.0 and its extensions
# NOTICE: common dependencies are in "remi-safe"

[remi-php70]
name=Remi's PHP 7.0 RPM repository for Enterprise Linux {{ ansible_lsb.major_release }} - $basearch
#baseurl=http://rpms.remirepo.net/enterprise/{{ ansible_lsb.major_release }}/php70/$basearch/
